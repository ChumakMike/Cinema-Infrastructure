@page
@model Cinema.Pages.Halls.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hall[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hall) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.HallId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.HallId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.HallId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
