@page
@model Cinema.Pages.Films.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Film) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actors)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FilmId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FilmId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FilmId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
