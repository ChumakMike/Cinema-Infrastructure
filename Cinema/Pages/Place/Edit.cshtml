@page
@model Cinema.Pages.Place.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Place.PlaceNumber" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.IsTaken" /> @Html.DisplayNameFor(model => model.Place.IsTaken)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Place.HallId" class="control-label"></label>
                <select asp-for="Place.HallId" class="form-control" asp-items="ViewBag.HallId"></select>
                <span asp-validation-for="Place.HallId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.SessionId" class="control-label"></label>
                <select asp-for="Place.SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                <span asp-validation-for="Place.SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
